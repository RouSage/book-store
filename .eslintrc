{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "arrowFunctions": true,
            "classes": true,
            "destructuring": true,
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "impliedStrict": true,
            "templateStrings": true
        }
    },
    "extends": [
        "react-app",
        "airbnb",
        "plugin:jsx-a11y/recommended",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "jsx-a11y",
        "prettier"
    ],
    "rules": {
        "semi": "error",
        "react/jsx-indent": [
            "warn",
            2
        ],
        "react/jsx-filename-extension": [
            "warn",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": "error"
    }
}
